<h1>new</h1>
<%= form_for(@user) do |f| %>
  <section>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </section>
  <section>
    <%= f.label(:email) %>
    <%= f.email(:name) %>
  </section>
  <section>
    <%= f.label(:password) %>
    <%= f.password_field(:password) %>
  </section>
  <section>
    <%= f.label(:password_confirmation) %>
    <%= f.password_field(:password_confirmation) %>
  </section>

  <%= submit_tag('submit', class: 'btn btn-info') %>
<% end %>
